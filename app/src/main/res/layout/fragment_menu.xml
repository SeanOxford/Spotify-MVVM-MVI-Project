<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/Button_menu_search_artists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Artists"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Button_menu_browse_categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Browse Categories"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_menu_search_artists" />

    <Button
        android:id="@+id/Button_menu_my_playlists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Playlists"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Button_menu_browse_categories" />


</androidx.constraintlayout.widget.ConstraintLayout>